@model ViewModelHomeIndex
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{

    ViewBag.Title = "Employee Index";
    var Photopath="~/images/"+(Model.Employee.Photopath ?? "sagar.jpg");

}
<div class="row justify-content-center m-1">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1> 
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@Photopath" asp-append-version="true" />
                <h4>Employee Id: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Name: @Model.Employee.Name</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="details" asp-controller="home" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-danger">Delete</a>
            </div>         
        </div>
    </div>
</div>
@section Scripts{ 
<script src="~/js/CustomScript.js"></script>
}